<?xml version="1.0" encoding="utf-8"?>
<example.test.phong.plaidstudy.ui.widget.ForegroundLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/padding_normal"
    android:baselineAligned="false"
    android:minHeight="?android:listPreferredItemHeightSmall"
    android:theme="@style/PlaidDarkOverlay"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/filter_icon"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:padding="@dimen/spacing_micro"
        android:src="@drawable/filter_placeholder" />

    <example.test.phong.plaidstudy.ui.widget.BaselineGridTextView
        android:id="@+id/filter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_normal"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:textAppearance="@style/TextAppearance.Filter"
        android:stateListAnimator="@animator/filter_active"
        tools:text="Popular Designer News"/>
</example.test.phong.plaidstudy.ui.widget.ForegroundLinearLayout>